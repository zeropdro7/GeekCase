{
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "endOfLine": "lf",
        "trailingComma": "none",
        "singleQuote": true
      }
    ],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }],
    "eol-last": ["error", "always"],
    "semi": ["error", "never"]
  }
}
